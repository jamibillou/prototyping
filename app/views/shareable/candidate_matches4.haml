              .span1.well
                %h6
                  Experience
                .gigantic 1 yr
              .span2.well{ :style => 'padding-right:0' }
                %h6 
                  Education
                .lead Master in Translation
            .row
              .span3.well
                %h6
                  Skills
                .lead
                  Native Speaker
                  .icon-star
                  %br/
                  Intelligent
                  %br/
