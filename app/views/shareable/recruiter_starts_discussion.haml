= render 'menu_recruiter'

.span12
  .row
    .span2
      .row
        = render 'menu_recruiter_interactions'
          
    .span8      
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              You started a discussion with Wansa Sooksomwat.
      #dynamic_content
      .row
