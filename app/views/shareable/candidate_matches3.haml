= render 'menu_candidate'

%br/
%br/

.span12
  .row
    .span2
      .row
        = render 'menu_candidate_interactions'
          
    .span9
      .row
        .span4.offset1
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span2
                %h5 Dominic Matheron is looking for someone matching this profile.
        .span3
          .row
            .span1
              = image_tag 'default_user.jpg'
            .span2
              %h3 Project manager
              %p Paris, France
          %br/
          .row
            .span3
              %span.label.label-inverse AGILE
              %span.label.label-inverse SCRUM
              %span.label.label-inverse RUBY ON RAILS
              %span.label.label-inverse EXPERIENCED WITH SCALING
              %span.label.label-inverse DRIVEN
              %span.label.label-inverse OPEN TO OUTSIDE INPUT
          %br/
          .row
            .span1
              %span.label.label-warning Experience
              %br/
              .lead 5-8 yrs
            .span2
              %span.label.label-warning Education
              %br/
              .lead Experience matters the most here
                    
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              You told Dominic Matheron that you match this profile.
              
      #dynamic_content
      .row
        = render 'candidate_toolbox'
        .span5
          .well
            .row
              .span1
                = link_to image_tag('wansa.jpg'), candidate_profile_public_path
              .span3
                %h5 Type your message:
                %textarea#message.input-xlarge{ :rows => '4' }
                %br/
                %button.btn.btn-primary{ :type => 'submit', :onclick => "add_message('wansa.jpg')" } Send
                %button.btn{ :onclick => 'clean()' } Clear
