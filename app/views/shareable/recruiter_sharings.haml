= render 'menu_recruiter'

%br/

.span12
  .row
    .span2
      .row
        = render 'menu_recruiter_interactions'

    .span8
      .row
        .span1.offset1.well
          = image_tag 'loubi.jpg'
        .span1{ :style => 'width: 89px; margin: 40px 40px 0 30px' }
          .lead.linkedin
            .icon-share
              shared
        .span4
          .card{ :style => 'margin: -4px 0 12px -15px' }
            .row
              .span4.well
                .label.label-linkedin.pull-right{ style: 'margin: -19px -19px 0 0' }
                  LinkedIn
                .row
                  .span1
                    = link_to image_tag('default_user.jpg'), candidate_profile_public_path
                  .span3
                    - unless session[:recruiter][:profile_3].nil?
                      %h3
                        = session[:recruiter][:profile_3][:title]
                      .lead 
                        = session[:recruiter][:profile_3][:experience]+' yrs experience, '+session[:recruiter][:profile_3][:education]
                    - else
                      %h3
                        = session[:recruiter][:profile_1][:title]
                      .lead 
                        = session[:recruiter][:profile_1][:experience]+' yrs experience, '+session[:recruiter][:profile_1][:education]
      .row
        .span7.offset1.info
          .pull-right.italic
            2 days ago
          %i.icon-globe
            %strong
              = link_to 'Gaëtan Charrier', 'http://www.linkedin.com/profile/view?id=55331163', :target => '_blank'
            - unless session[:recruiter][:profile_3].nil?
              = "visited your #{session[:recruiter][:profile_3][:title]} role."
            - else
              = "visited your #{session[:recruiter][:profile_1][:title]} role."
      %br/
      .row
        .span7.offset1.success
          .pull-right.italic
            2 days ago
          %i.icon-retweet
            %strong
              = link_to 'Gaëtan Charrier', 'http://www.linkedin.com/profile/view?id=55331163', :target => '_blank'
            - unless session[:recruiter][:profile_3].nil?
              = "reshared your #{session[:recruiter][:profile_3][:title]} role."
            - else
              = "reshared your #{session[:recruiter][:profile_1][:title]} role."
      %br/
      .row
        .span1.offset1.well
          = image_tag 'loubi.jpg'
        .span1{ :style => 'width: 89px; margin: 40px 40px 0 30px' }
          .lead.twitter
            .icon-share
              shared
        .span4
          .card{ :style => 'margin: -4px 0 12px -15px' }
            .row
              .span4.well
                .label.label-twitter.pull-right{ style: 'margin: -19px -19px 0 0' }
                  Twitter
                .row
                  .span1
                    = link_to image_tag('default_user.jpg'), candidate_profile_public_path
                  .span3
                    - unless session[:recruiter][:profile_2].nil?
                      %h3
                        = session[:recruiter][:profile_2][:title]
                      .lead 
                        = session[:recruiter][:profile_2][:experience]+' yrs experience, '+session[:recruiter][:profile_2][:education]
                    - else
                      %h3
                        = session[:recruiter][:profile_1][:title]
                      .lead 
                        = session[:recruiter][:profile_1][:experience]+' yrs experience, '+session[:recruiter][:profile_1][:education]
      .row
        .span7.offset1.info
          .pull-right.italic
            3 hours ago
          %i.icon-globe
            %strong
              = link_to 'Maxime Bozzi', 'https://twitter.com/#!/MaxooGP', :target => '_blank'
            - unless session[:recruiter][:profile_2].nil?
              = "@MaxooGP, visited your #{session[:recruiter][:profile_2][:title]} role."
            - else
              = "@MaxooGP, visited your #{session[:recruiter][:profile_1][:title]} role."