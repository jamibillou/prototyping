= render 'menu_recruiter'

.span4.card
  .row
    .span3.well
      .row
        .span1
          = link_to image_tag(session[:recruiter][:pic]), recruiter_profile_path
        .span2
          %h3 
            = session[:recruiter][:full_name]
          .lead{ style: 'margin-bottom:0' }
            = session[:recruiter][:company]
          %i 
            = session[:recruiter][:city]+', '+session[:recruiter][:country]
  %h3{ :style => 'margin: 10px 0 10px -25px' } is looking for:
  .row
    .span3.well
      .row
        .span1
          = image_tag('default_user.jpg')
        .span2
          %h3
            = session[:recruiter][:profile_1][:title]
          %p 
            = session[:recruiter][:profile_1][:city]+', '+session[:recruiter][:profile_1][:country]
  .row
    .span1.well
      %h6
        Experience
      .gigantic
        = session[:recruiter][:profile_1][:experience]
    .span2.well{ :style => 'min-height: 92px; padding-right:0' }
      %h6 
        Education
      .lead 
        = session[:recruiter][:profile_1][:education]
  .row
    .span3.well
      %h6
        Skills
      .lead
        = session[:recruiter][:profile_1][:skill_1]
        - if session[:recruiter][:profile_1][:star] == 'recruiter_profile_1_star_1'
          .icon-star        
        %br/
        = session[:recruiter][:profile_1][:skill_2]        
        - if session[:recruiter][:profile_1][:star] == 'recruiter_profile_1_star_2'
          .icon-star
        %br/
        = session[:recruiter][:profile_1][:skill_3]        
        - if session[:recruiter][:profile_1][:star] == 'recruiter_profile_1_star_3'
          .icon-star

