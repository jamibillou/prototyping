= render 'menu_recruiter'

.span12
  .row
    .span2
      .row
        = render 'menu_recruiter_interactions'
        
    .span9
      .row
        .span3.offset1
          .row
            .span1
              = image_tag 'default_user.jpg'
            .span2
              %h3 Project manager
              %p Paris, France
          %br/
          .row
            .span3
              %span.label.label-inverse AGILE
              %span.label.label-inverse SCRUM
              %span.label.label-inverse RUBY ON RAILS
              %span.label.label-inverse EXPERIENCED WITH SCALING
              %span.label.label-inverse DRIVEN
              %span.label.label-inverse OPEN TO OUTSIDE INPUT
          %br/
          .row
            .span1
              %span.label.label-warning Experience
              %br/
              .lead 5-8 yrs
            .span2
              %span.label.label-warning Education
              %br/
              .lead Experience matters the most here
        .span4
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span2
                %h5 You are looking for someone matching this profile.
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              Mathieu Tessier said he matches this profile.
      .row
        .span5.offset1
          .well
            .row
              .span1
                = image_tag('mathieu.jpg')
              .span3
                %h5 Mathieu said:
                %p Good afternoon, I've just read your vacancy, and I think I'm the perfect guy for this job, what do you think?
      .row
        .span5.offset3
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span3
                %h5 You said:
                %p Hmm, I'm sorry but we would prefer someone speaking several languages, and your profile says that you speak only French...
      .row
        .span7.offset1
          .alert.alert-danger
            %i.icon-remove
              You rejected Mathieu's application.
      .row
        .span5.offset1
          .well
            .row
              .span1
                = image_tag('mathieu.jpg')
              .span3
                %h5 Mathieu said:
                %p Oh, I'm a bit surprised, French is not supposed to be THE language to speak??
      #dynamic_content
      .row
        .span5.offset3
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span3
                %h5 Type your message:
                %textarea#message.input-xlarge{ :rows => '4' }
                %br/
                %button.btn.btn-primary{ :type => 'submit', :onclick => "add_message('dom.jpg')" } Send
                %button.btn{ :onclick => 'clean()' } Clear