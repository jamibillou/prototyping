= render 'menu_recruiter'

.span12
  .row
    .span2
      .row
        = render 'menu_recruiter_interactions'
        
    .span9
      .row
        .span3.offset1
          .row
            .span1
              = image_tag 'default_user.jpg'
            .span2
              %h3 Graphic designer
              %p Amsterdam, Netherlands
          %br/
          .row
            .span3
              %span.label.label-inverse VISUAL DESIGN
              %span.label.label-inverse INTERACTION DESIGN
              %span.label.label-inverse HTML/CSS PROTOTYPING
              %span.label.label-inverse STARTUP MINDED
              %span.label.label-inverse EASY GOING
              %span.label.label-inverse FOCUSED
          %br/
          .row
            .span1
              %span.label.label-warning Experience
              %br/
              .lead 5 yrs or so
            .span2
              %span.label.label-warning Education
              %br/
              .lead HBO
        .span4
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span2
                %h5 You are looking for someone matching this profile.
        
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              Carole Delhens said she matches this profile.
      
      .row
        .span5.offset1
          .well
            .row
              .span1
                = image_tag('carole.jpg')
              .span3
                %h5 Carole Delhens said:
                %p Hello, I just saw your profile about a graphic designer, I think I've got a few experiences matching it. Please have a look at my page!
      .row
        .span5.offset3
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span3
                %h5 You said:
                %p You're right, your profile can be really worthy! When can we met?
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              You accepted Carole Delhens's application.
      #dynamic_content
      .row
        .span5.offset3
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span3
                %h5 Type your message:
                %textarea#message.input-xlarge{ :rows => '4' }
                %br/
                %button.btn.btn-primary{ :type => 'submit', :onclick => "addMessage('dom.jpg')" } Send
                %button.btn{ :onclick => 'clean()' } Clear