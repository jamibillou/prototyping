            = session[:recruiter][:profile_3][:city]+', '+session[:recruiter][:profile_3][:country]
  .row
    .span1.well
      %h6
        Experience
      .gigantic
        = session[:recruiter][:profile_3][:experience]
    .span2.well{ :style => 'min-height: 92px; padding-right:0' }
      %h6 
        Education
      .lead 
        = session[:recruiter][:profile_3][:education]
  .row
    .span3.well
      %h6
        Skills
      .lead
        = session[:recruiter][:profile_3][:skill_1]
        - if session[:recruiter][:profile_3][:star] == 'recruiter_profile_3_star_1'
          .icon-star        
        %br/
        = session[:recruiter][:profile_3][:skill_2]        
        - if session[:recruiter][:profile_3][:star] == 'recruiter_profile_3_star_2'
          .icon-star
        %br/
        = session[:recruiter][:profile_3][:skill_3]        
        - if session[:recruiter][:profile_3][:star] == 'recruiter_profile_3_star_3'
          .icon-star

