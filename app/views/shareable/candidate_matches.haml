= render 'menu_candidate'

.span12
  .row
    .span2
      .row
        = render 'menu_candidate_interactions'
          
    .span10
      .row
        .span5.offset1
          .well
            .row
              .span1
                = link_to image_tag('dom.jpg'), recruiter_profile_path
              .span3
                %h5 Dominic Matheron is looking for:
      .row
        .span4.offset1
          .row
            .span1
              = image_tag 'default_user.jpg'
            .span2
              %h3 Graphic designer
              %p Amsterdam, Netherlands
          %br/
          .row
            .span3
              %span.label.label-inverse VISUAL DESIGN
              %span.label.label-inverse INTERACTION DESIGN
              %span.label.label-inverse HTML/CSS PROTOTYPING
              %span.label.label-inverse STARTUP MINDED
              %span.label.label-inverse EASY GOING
              %span.label.label-inverse FOCUSED
          %br/
          .row
            .span1
              %span.label.label-warning Experience
              %br/
              .lead 5 yrs or so
            .span2
              %span.label.label-warning Education
              %br/
              .lead HBO             
      .row
        .span7.offset1
          .alert.alert-success
            %i.icon-ok
              You told Dominic Matheron that you match this profile.
              
      .row
        .span5.offset3
          .well
            .row
              .span1
                = link_to image_tag('wansa.jpg'), recruiter_profile_path
              .span3
                %h5 Type your message:
                %textarea.input-xlarge{ :rows => '4' }
                %button.btn.btn-primary{ :type => 'submit' } Send
                %button.btn Clear
                