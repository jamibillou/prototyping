%h1
  Welcome to Engaccino, please sign up!
%br/
%form{ :action => candidate_profile_public_path, :method => 'POST' }
  .row
    .span5.offset1
      .card
        .row
          .span4.well
            .row
              .span1
                = image_tag('default_user.jpg', :id => 'candidate_picture')
              .span3
                %input#candidate_full_name{ :type => 'text', :placeholder => 'Full name' }
                %br/
                %input#candidate_city.input-small{    :type => 'text', :placeholder => 'City' }
                %input#candidate_country.input-small{ :type => 'text', :placeholder => 'Country' }
        .row
          .span1.well
            %h6
              Experience
            %h3
              %input#candidate_experience{ :type => 'text', :placeholder => '0', :style => 'height:30px;width:30px;font-size:16pt;' }
              Yr(s)
          .span3.well{ :style => 'padding-right:0' }
            %h6 
              Education
            %textarea#candidate_education{ :placeholder => 'Put your most valuable education', :rows => 3, :style => 'margin-bottom: 12px;width:240px;' }
            %br/
        .row
          .span4.well{ style: 'padding-bottom:0' }
            %h6
              Professional skills
            .lead
              .row
                .span3
                  %input#candidate_pro_skill_1{ :type => 'text' }
                  .icon-star-empty#candidate_pro_skill_star_1
                .span1
                  %select#candidate_pro_skill_level_1.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
              .row
                .span3
                  %input#candidate_pro_skill_2{ :type => 'text' }
                  .icon-star-empty#candidate_pro_skill_star_2
                .span1
                  %select#candidate_pro_skill_level_2.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
              .row
                .span3
                  %input#candidate_pro_skill_3{ :type => 'text' }
                  .icon-star-empty#candidate_pro_skill_star_3
                .span1
                  %select#candidate_pro_skill_level_3.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
              
        .row
          .span4.well{ style: 'padding-bottom:0' }
            %h6 
              Interpersonal skills
            .lead
              .row
                .span3
                  %input#candidate_inter_skill_1{ :type => 'text' }
                  .icon-star-empty#candidate_inter_skill_star_1
                .span1
                  %select#candidate_inter_skill_level_1.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
              .row
                .span3
                  %input#candidate_inter_skill_2{ :type => 'text' }
                  .icon-star-empty#candidate_inter_skill_star_2
                .span1
                  %select#candidate_inter_skill_level_2.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
              .row
                .span3
                  %input#candidate_inter_skill_3{ :type => 'text' }
                  .icon-star-empty#candidate_inter_skill_star_3
                .span1
                  %select#candidate_pro_skill_level_1.select-level
                    %option{ :value => 'beginner' } Beginner
                    %option{ :value => 'intermediate' } Intermediate
                    %option{ :value => 'advanced' } Advanced
                    %option{ :value => 'expert' } Expert
    
    .span5
      %input.btn.btn-gigantic{ :type => 'button', :value => 'Import from Linkedin', :onclick => "import_linkedin('candidate')" } 
