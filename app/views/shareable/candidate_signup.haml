      %br/
      %br/
      %br/
      %br/
      %br/       
      %br/
      %br/
      %br/
      %br/
      %br/
      .row
        .span5
          %textarea#candidate_catchphrase{ :placeholder => 'Describe yourself in a catchphrase', :rows => 4, :style => 'width:440px;font-size:23pt;line-height:1em;' }
          %button.btn.btn-gigantic{ :type => 'submit', :style => 'width:450px;' } Save your profile
            