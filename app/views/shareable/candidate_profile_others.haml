= render 'menu_candidate'

.row
  .span5
    .row
      .card
        %ul.nav.nav-pills{ :style => 'margin-bottom:10px' }
          %li
            %a{ :href => '#' }
              %i.icon-download
              Download CV
              
          %li.dropdown
            %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => '#' }
              %i.icon-globe
              Elsewhere online
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'LinkedIn', '#'
              %li
                = link_to 'Twitter', '#'
              %li
                = link_to 'Tumblr', '#'
  .span2.offset4
    .row
      %a.btn.btn-primary.pull-right{ :href => candidate_profile_path }
        .icon-eye-close
        Close preview

.row
  .span5
    .card
      .row
        .span4.well
          .row
            .span1
              = link_to image_tag(session[:candidate][:pic]), candidate_profile_public_path
            .span3
              %h3 
                = session[:candidate][:full_name]
              %p
                = session[:candidate][:city]+', '+session[:candidate][:country]
              %p
                = session[:candidate][:role].to_s+' at '+session[:candidate][:company]
      .row
        .span1.well
          %h6
            Experience
          .gigantic 
            = session[:candidate][:experience] == 1.to_s ? '1 yr' : session[:candidate][:experience].to_s+'yrs'
        .span3.well{ :style => 'padding-right:0' }
          %h6 
            Education
          .lead 
            = session[:candidate][:education]
      .row
        .span4.well{ style: 'padding-bottom:0' }
          %h6
            Skills
          .lead
            .row
              .span3
                = session[:candidate][:pro_skill_1][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:pro_skill_1][:level]
            .row
              .span3
                = session[:candidate][:pro_skill_2][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:pro_skill_2][:level]
            .row
              .span3
                = session[:candidate][:pro_skill_3][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:pro_skill_3][:level]
      .row
        .span4.well{ style: 'padding-bottom:0' }
          %h6 
            Qualities
          .lead
            .row
              .span3
                = session[:candidate][:inter_skill_1][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:inter_skill_1][:level]
            .row
              .span3
                = session[:candidate][:inter_skill_2][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:inter_skill_2][:level]
            .row
              .span3
                = session[:candidate][:inter_skill_3][:name]
              .span1
                = render 'progress_bar', :level => session[:candidate][:inter_skill_3][:level]
      
  .span7
    .row
      .span3.offset4
        .row
          .span1
            = image_tag 'dom.jpg'
          .span1
            %p{ :style => 'margin-top:-2px' } shared by:
            %h3{ :style => 'font-size:14px; line-height:20px' } Dominic Matheron
    %br/
    %br/
    %br/
    %br/       
    %br/
    %br/
    %br/
    %br/
    %br/
    
    .row
      .span5.offset1
        %h2{ :style => 'text-align:right' }
          .i.icon-comment
          &nbsp;
          = (session[:sharer].nil? || session[:sharer][:message].blank?) ? @default_message : session[:sharer][:message]
        %br/
        %br/
        .pull-right
          %a.btn.btn-gigantic.btn-danger{ :href => recruiter_isnt_interested_path } Not interested
          %a.btn.btn-gigantic.btn-success{ :href => recruiter_starts_discussion_path, :style => 'margin-right:0' } Get in touch!
          
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
