      .span4
        %h3
          I'd really like to work for you. Can we talk?
      .span4
        %a.btn.btn-large.btn-primary.btn-danger{ "data-toggle" => "modal", :href => "#signin-no-modal"} No, not interested
        %a.btn.btn-large.btn-success{ "data-toggle" => "modal", :href => "#signin-yes-modal"} Yes it'd be great!
 
  .span4
    .row
      .span1
        = image_tag 'profile_pic.jpg'
      .span3
        %h3 Wansa Sooksomwat
        %p Amsterdam, Netherlands
    %br/
    .row
      .span4.lead
        Junior communication & marketing executive
    .row
      .span4
        %span.label.label-inverse EVENT PLANNING
        %span.label.label-inverse EXTERNAL COMMUNICATION
        %span.label.label-inverse WRITING
        %span.label.label-inverse ATTENTION TO DETAILS
        %span.label.label-inverse ORGANIZATION
        %span.label.label-inverse GOOD TEAM MATE
        %span.label.label-inverse TRAVEL
        %span.label.label-inverse CINEMA
        %span.label.label-inverse READING
