source 'https://rubygems.org'

gem 'rails', '3.2.1'
gem 'haml'
gem 'twitter-bootstrap-rails'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'less-rails'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'sqlite3'  
end

group :production do
  gem 'pg'
end

